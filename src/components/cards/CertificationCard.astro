---
export interface Props {
  title: string;
  description: string;
  icon: string;
  link: string;
}
const { title, description, icon, link } = Astro.props;
---

<div class="flex flex-col items-center text-center w-full max-w-xs mx-auto">
  <a href={link} target="_blank" rel="noopener noreferrer" class="mb-4">
    <img src={icon} alt={title} class="w-24 h-24 object-contain" />
  </a>
  <div>
    <span class="font-bold text-lg">{title}</span><br />
    <a href={link} target="_blank" rel="noopener noreferrer" class="text-blue-600 hover:underline">
      {description}
    </a>
  </div>
</div>
